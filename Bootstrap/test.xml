<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.smsapp.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addnumberfield"
        android:text="+18134584492"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbersview"
        android:textSize="15dp"
        android:layout_below="@+id/currentcontacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Text"
        android:onClick="sendsms"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which Contacts?"
        android:id="@+id/button"
        android:layout_marginBottom="89dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/currentcontacts"
        android:layout_toEndOf="@+id/currentcontacts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Send List"
        android:id="@+id/currentcontacts"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Name and Number"
        android:id="@+id/button3"
        android:onClick="addnum"
        android:textSize="12sp"
        android:layout_below="@+id/addnumberfield"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Message Contents"
        android:id="@+id/msg"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/namebox"
        android:layout_alignEnd="@+id/namebox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mohamed India"
        android:id="@+id/namebox"
        android:textSize="15sp"
        android:textIsSelectable="false"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/numbersview"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name (NO1)"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/namebox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number (NO2)"
        android:id="@+id/textView2"
        android:layout_below="@+id/namebox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextcustom4"
        android:text="Custom Field {4}"
        android:textSize="15sp"
        android:layout_below="@+id/editTextcustom3"
        android:layout_alignRight="@+id/namebox"
        android:layout_alignEnd="@+id/namebox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom field (NO3)"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/editTextcustom3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Field (NO4)"
        android:id="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editTextcustom4"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextcustom3"
        android:text="Custom Field {3}"
        android:textSize="15sp"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/editTextcustom4"
        android:layout_alignEnd="@+id/editTextcustom4" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/msg"
        android:layout_alignLeft="@+id/addnumberfield"
        android:layout_alignStart="@+id/addnumberfield" />

</RelativeLayout>
